#!/bin/bash

dir() {
    local DIR=""

    while [ $# -gt 0 ]
    do
        case "$1"
        in
            --dir=*) DIR=${1#--dir=}; shift;;
            --*=*)   shift;;
            --)      shift; break;;
            *)       break;;
        esac
    done

    if [ "$DIR" = "" ]
    then
        DIR="$HOME/.arduino"
    fi

    if [ ! -d "${DIR}" ]
    then
        mkdir -p "${DIR}"
    fi
    echo "${DIR}"
}

dir_self_test() {
    if [ "$(dir --dir='test me')" != "test me" ]; then exit 1; fi
    if [ "$(dir)" == "test me" ] ; then exit 1; fi
    if [ "$(dir)" == "" ] ; then exit 1; fi
    echo "dir ok"
}

if [[ "${BASH_SOURCE[0]}" == "${0}" ]]
then
    if [ "$1" == "--self-test" ]
    then
	dir_self_test "$@"
    else
	dir "$@"
    fi
fi
